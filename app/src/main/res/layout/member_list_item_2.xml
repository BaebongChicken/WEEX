<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <FrameLayout
            android:id="@+id/rootLayoutLeft"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:padding="5dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="200dp">

                    <ImageView
                        android:id="@+id/memberImageViewLeft"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="#222"
                        android:scaleType="centerCrop" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:padding="5dp">

                        <TextView
                            android:id="@+id/memberNameTxtLeft"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Denis"
                            android:textColor="#FFF" />

                        <TextView
                            android:id="@+id/memberLocationTxtLeft"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="해운대, 부산"
                            android:textColor="#FFF" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="0dp"
                            android:layout_weight="1" />

                        <LinearLayout
                            android:layout_width="150dp"
                            android:layout_height="wrap_content"
                            android:gravity="center_vertical"
                            android:orientation="horizontal">

                            <TextView
                                android:id="@+id/actNameTxt1Left"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="#싸이클링"
                                android:textColor="#FFF" />

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1" />

                            <TextView
                                android:id="@+id/actNameTxt2Left"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="#싸이클링"
                                android:textColor="#FFF" />

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="150dp"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="5dp"
                            android:gravity="center_vertical"
                            android:orientation="horizontal">

                            <TextView
                                android:id="@+id/actNameTxt3Left"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="#싸이클링"
                                android:textColor="#FFF" />

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1" />

                            <TextView
                                android:id="@+id/actNameTxt4Left"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="#싸이클링"
                                android:textColor="#FFF" />

                        </LinearLayout>

                    </LinearLayout>


                    <ImageView
                        android:id="@+id/isCoachImgViewLeft"
                        android:layout_width="70dp"
                        android:layout_height="70dp"
                        android:layout_gravity="right"
                        android:background="#FFF"
                        android:src="@drawable/check3" />
                </FrameLayout>


                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="#FDFDFD"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">

                        <ImageView
                            android:id="@+id/actIconImgViewLeft"
                            android:layout_width="25dp"
                            android:layout_height="25dp"
                            android:layout_margin="5dp"
                            android:src="@drawable/check3" />


                        <TextView
                            android:id="@+id/likeCountTxtLeft"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="(4)"
                            android:textColor="#00D" />

                        <TextView
                            android:id="@+id/actLevelTxtLeft"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="15dp"
                            android:text="같이 크로스핏 하거나 자전거 타실분!"
                            android:textColor="#444" />
                    </LinearLayout>

                </FrameLayout>
            </LinearLayout>
        </FrameLayout>

        <FrameLayout
            android:id="@+id/rootLayoutRight"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:padding="5dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="200dp">

                    <ImageView
                        android:id="@+id/memberImageView"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="#222"
                        android:scaleType="centerCrop" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:padding="5dp">

                        <TextView
                            android:id="@+id/memberNameTxtRight"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Denis"
                            android:textColor="#FFF" />

                        <TextView
                            android:id="@+id/memberLocationTxtRight"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="해운대, 부산"
                            android:textColor="#FFF" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="0dp"
                            android:layout_weight="1" />

                        <LinearLayout
                            android:layout_width="150dp"
                            android:layout_height="wrap_content"
                            android:gravity="center_vertical"
                            android:orientation="horizontal">

                            <TextView
                                android:id="@+id/actNameTxt1Right"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="#싸이클링"
                                android:textColor="#FFF" />

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1" />

                            <TextView
                                android:id="@+id/actNameTxt2Right"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="#싸이클링"
                                android:textColor="#FFF" />

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="150dp"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="5dp"
                            android:gravity="center_vertical"
                            android:orientation="horizontal">

                            <TextView
                                android:id="@+id/actNameTxt3Right"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="#싸이클링"
                                android:textColor="#FFF" />

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1" />

                            <TextView
                                android:id="@+id/actNameTxt4Right"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="#싸이클링"
                                android:textColor="#FFF" />

                        </LinearLayout>

                    </LinearLayout>


                    <ImageView
                        android:id="@+id/isCoachImgViewRight"
                        android:layout_width="70dp"
                        android:layout_height="70dp"
                        android:layout_gravity="right"
                        android:background="#FFF"
                        android:src="@drawable/check3" />
                </FrameLayout>


                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="#FDFDFD"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">

                        <ImageView
                            android:id="@+id/actIconImgViewRight"
                            android:layout_width="25dp"
                            android:layout_height="25dp"
                            android:layout_margin="5dp"
                            android:src="@drawable/check3" />


                        <TextView
                            android:id="@+id/likeCountTxtRight"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="(4)"
                            android:textColor="#00D" />

                        <TextView
                            android:id="@+id/actLevelTxtRight"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="15dp"
                            android:text="같이 크로스핏 하거나 자전거 타실분!"
                            android:textColor="#444" />
                    </LinearLayout>

                </FrameLayout>
            </LinearLayout>
        </FrameLayout>
    </LinearLayout>

</LinearLayout>